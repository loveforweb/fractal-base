<div class="component player-profile">
    <div class="player-details">
        <div class="player-number">
            {{> '@player-stat' title="#" value=player.jerseyNumber }}
        </div>
        <div class="player-profile-image">
        {{> '@player-image' imageSrc=player.officialImageSrc firstname=player.firstName lastname=player.lastName}}
        </div>
        <div class="player-profile-quick-stats">
            {{> '@player-stat' title="Pos" value=player.primaryPosition }}
            {{> '@player-stat' title="Age" value=player.age }}
            {{> '@player-stat' title="Height" value=player.height }}
            {{> '@player-stat' title="Weight" value=player.weight }}
        </div>
    </div>
    <div class="player-name">
        {{player.firstName}} {{player.lastName}}
    </div>
</div>